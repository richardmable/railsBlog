<h1>All the Posts:</h1>

<% @posts.each do |p|%>
<h2><%= p.title %></h2>
<p><%= p.content %></p>
<p>By: <%= p.user_id %> </p>
	<%= form_for @comment do |f| %> 
		<%=f.label :Title %>
		<%=f.text_field :title %>
		<%=f.label :content %>
		<%=f.text_field :content %>
		<%= hidden_field(:comment, :post_id, :value => p.id) %>
		<%=f.submit :Comment %>
		<%end%>
<p>Comments:</p>
		<% @comments.each do |c|%>
		<h2><%= c.title %></h2>
		<p><%= c.content %></p>
		<p><%= c.post_id %></p>
		<p>By: <%= c.user_id %> </p>
		<% end %>
<% end %>